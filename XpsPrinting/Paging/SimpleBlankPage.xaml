<Paging:BlankPageBase x:Class="XpsPrinting.Paging.SimpleBlankPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:Paging="clr-namespace:XpsPrinting.Paging"
             Padding="50">
    
	<Grid x:Name="grid">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="20" Text="Some header" />
		<Border Grid.Row="1" x:Name="contentPlaceholder" Margin="20,0" Padding="50" BorderBrush="Black" BorderThickness="5" />
		<StackPanel Grid.Row="2">
			<TextBlock x:Name="pageNumber" HorizontalAlignment="Center" />
			<TextBlock HorizontalAlignment="Center" FontSize="20" Text="Some footer" />
		</StackPanel>
	</Grid>
</Paging:BlankPageBase>