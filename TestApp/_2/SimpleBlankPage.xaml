<Paging:BlankPageBase x:Class="TestApp._2.SimpleBlankPage"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Paging="clr-namespace:XpsPrinting.Paging;assembly=XpsPrinting"
                      >

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" x:Name="tbHeader" HorizontalAlignment="Center" FontSize="15" />
		<Border Grid.Row="1" x:Name="contentPlaceholder" Margin="20,0" BorderBrush="Black" BorderThickness="5"/>
		<TextBlock Grid.Row="2" x:Name="tbFooter" HorizontalAlignment="Center" FontSize="15" />
	</Grid>
</Paging:BlankPageBase>