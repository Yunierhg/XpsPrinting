<Window x:Class="TestApp._1.SimpleTextPrinting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SimpleTextPrinting" Height="600" Width="600">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Margin="10">Text to print:</TextBlock> 
        <TextBox Grid.Row="1" Name="textBox" TextWrapping="Wrap" />
        <Button Grid.Row="2" Margin="15" Click="Button_Click">OK</Button>
    </Grid>
</Window>
